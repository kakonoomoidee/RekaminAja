<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Rekam Medis â€“ RekaminAja</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "sans-serif"],
              mono: ["JetBrains Mono", "monospace"],
            },
          },
        },
      };
    </script>
    <style>
      body::-webkit-scrollbar {
        display: none;
      }

      body {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: #0f172a;
        border-radius: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #334155;
        border-radius: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #475569;
      }

      input::-webkit-outer-spin-button,
      input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
    </style>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans antialiased">
    <%- include("../partials/navbar") %>

    <main class="pl-64 min-h-screen flex flex-col items-center py-12">
      <div class="w-full max-w-3xl mx-auto px-4">
        <a
          href="/admin/medical?patientHash=<%= patientHash %>"
          class="text-sm text-slate-500 hover:text-blue-400 flex items-center gap-1 transition-colors mb-6"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            />
          </svg>
          Kembali ke Riwayat
        </a>

        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold text-white">Catat Rekam Medis Baru</h1>
          <p class="text-slate-400 mt-2">
            Data ini akan dienkripsi dan disimpan permanen di blockchain
            (Immutable).
          </p>
        </div>

        <div
          class="bg-slate-900 border border-slate-800 rounded-xl p-8 shadow-2xl"
        >
          <form method="POST" action="/admin/medical/add" class="space-y-6">
            <input
              type="hidden"
              name="patientHash"
              value="<%= patientHash %>"
            />

            <div
              class="p-4 bg-blue-900/20 border border-blue-800/50 rounded-lg flex items-start gap-3"
            >
              <svg
                class="w-5 h-5 text-blue-400 mt-0.5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
              <div class="overflow-hidden w-full">
                <p class="text-xs text-blue-300 uppercase font-semibold">
                  Pasien Hash Target
                </p>
                <p class="text-sm font-mono text-blue-200 break-all">
                  <%= patientHash %>
                </p>
              </div>
            </div>

            <div class="space-y-2 relative">
              <label class="block text-sm font-medium text-slate-300"
                >Dokter Penanggung Jawab</label
              >

              <input
                type="hidden"
                name="doctorHash"
                id="doctorHashInput"
                required
              />

              <button
                type="button"
                id="doctorDropdownTrigger"
                class="w-full text-left pl-12 pr-10 py-3 bg-slate-950 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-slate-400 transition-all flex items-center justify-between relative group hover:border-emerald-500/50"
              >
                <span id="doctorSelectedText">-- Pilih Dokter --</span>

                <div
                  class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                >
                  <svg
                    class="h-5 w-5 text-slate-500 group-hover:text-emerald-500 transition-colors"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </div>

                <div
                  class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-slate-500"
                >
                  <svg
                    id="chevronIcon"
                    class="w-5 h-5 transition-transform duration-200"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </div>
              </button>

              <div
                id="doctorDropdownMenu"
                class="hidden absolute top-full left-0 w-full mt-2 bg-slate-900 border border-slate-700 rounded-xl shadow-2xl overflow-hidden z-50"
              >
                <div
                  class="p-2 border-b border-slate-800 bg-slate-900 sticky top-0"
                >
                  <input
                    type="text"
                    id="doctorSearchInput"
                    placeholder="Cari nama dokter..."
                    class="w-full px-3 py-2 bg-slate-950 border border-slate-800 rounded-lg text-sm text-white focus:outline-none focus:border-emerald-500 transition-colors font-sans"
                    autocomplete="off"
                  />
                </div>

                <div
                  id="doctorList"
                  class="max-h-52 overflow-y-auto custom-scrollbar p-1"
                ></div>
              </div>
            </div>

            <div
              class="p-5 bg-slate-950/50 border border-slate-800 rounded-xl space-y-4"
            >
              <div class="flex items-center gap-2 mb-2">
                <span class="text-xl">ðŸ©º</span>
                <h3 class="text-slate-200 font-semibold">
                  Pemeriksaan Awal (Vitals)
                </h3>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="space-y-1">
                  <label
                    class="text-xs font-medium text-slate-400 uppercase tracking-wide"
                    >Tekanan Darah</label
                  >
                  <div class="relative">
                    <input
                      type="text"
                      name="tension"
                      placeholder="Contoh: 120/80"
                      class="w-full px-4 py-2.5 bg-slate-900 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all"
                    />
                    <span
                      class="absolute right-3 top-2.5 text-xs text-slate-500"
                      >mmHg</span
                    >
                  </div>
                </div>

                <div class="space-y-1">
                  <label
                    class="text-xs font-medium text-slate-400 uppercase tracking-wide"
                    >Berat Badan (BB)</label
                  >
                  <div class="relative">
                    <input
                      type="number"
                      name="weight"
                      placeholder="0"
                      class="w-full px-4 py-2.5 bg-slate-900 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all"
                    />
                    <span
                      class="absolute right-3 top-2.5 text-xs text-slate-500"
                      >kg</span
                    >
                  </div>
                </div>

                <div class="space-y-1">
                  <label
                    class="text-xs font-medium text-slate-400 uppercase tracking-wide"
                    >Tinggi Badan (TB)</label
                  >
                  <div class="relative">
                    <input
                      type="number"
                      name="height"
                      placeholder="0"
                      class="w-full px-4 py-2.5 bg-slate-900 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all"
                    />
                    <span
                      class="absolute right-3 top-2.5 text-xs text-slate-500"
                      >cm</span
                    >
                  </div>
                </div>

                <div class="space-y-1">
                  <label
                    class="text-xs font-medium text-slate-400 uppercase tracking-wide"
                    >Denyut Nadi</label
                  >
                  <div class="relative">
                    <input
                      type="number"
                      name="pulse"
                      placeholder="Contoh: 80"
                      class="w-full px-4 py-2.5 bg-slate-900 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all"
                    />
                    <span
                      class="absolute right-3 top-2.5 text-xs text-slate-500"
                      >bpm</span
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-slate-300"
                >Diagnosis Klinis</label
              >
              <textarea
                name="diagnosis"
                rows="3"
                required
                placeholder="Tuliskan hasil diagnosa..."
                class="w-full px-4 py-3 bg-slate-950 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all resize-none"
              ></textarea>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-slate-300"
                >Tindakan / Resep Obat</label
              >
              <textarea
                name="treatment"
                rows="4"
                required
                placeholder="Rincian tindakan atau obat yang diberikan..."
                class="w-full px-4 py-3 bg-slate-950 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 text-white placeholder-slate-600 transition-all resize-none"
              ></textarea>
            </div>

            <div class="pt-4 border-t border-slate-800">
              <button
                class="w-full bg-emerald-600 hover:bg-emerald-500 text-white font-bold py-3.5 rounded-lg shadow-lg shadow-emerald-600/20 transition-transform active:scale-[0.98] flex items-center justify-center gap-2"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"
                  />
                </svg>
                Simpan Permanen ke Blockchain
              </button>
              <p class="text-center text-xs text-slate-500 mt-3">
                âš  Data tidak dapat diubah atau dihapus setelah disimpan.
              </p>
            </div>
          </form>
        </div>
      </div>
    </main>

    <script>
      // Data Injection
      const doctorsData = <%- JSON.stringify(doctors.map(d => ({ name: d.name, spec: d.specialization, hash: d.doctorIdHash }))).replace(/'/g, "\\'") %>;

      // Elements
      const trigger = document.getElementById('doctorDropdownTrigger');
      const menu = document.getElementById('doctorDropdownMenu');
      const searchInput = document.getElementById('doctorSearchInput');
      const hiddenInput = document.getElementById('doctorHashInput');
      const selectedText = document.getElementById('doctorSelectedText');
      const chevron = document.getElementById('chevronIcon');
      const listContainer = document.getElementById('doctorList');

      // Render List Function
      function renderList(items) {
          listContainer.innerHTML = '';
          if(items.length === 0) {
              listContainer.innerHTML = '<div class="px-4 py-3 text-sm text-slate-500 text-center italic">Tidak ada dokter ditemukan</div>';
              return;
          }

          items.forEach(doc => {
              const div = document.createElement('div');
              div.className = 'px-4 py-2 hover:bg-slate-800 cursor-pointer rounded-lg transition-colors flex flex-col group';
              div.innerHTML = `
                  <span class="text-sm font-medium text-slate-300 group-hover:text-white">${doc.name}</span>
                  <span class="text-xs text-emerald-500/70 group-hover:text-emerald-400">${doc.spec}</span>
              `;

              div.addEventListener('click', () => {
                  selectedText.textContent = `${doc.name} (${doc.spec})`;
                  selectedText.classList.remove('text-slate-400');
                  selectedText.classList.add('text-white');
                  hiddenInput.value = doc.hash;

                  closeMenu();
              });

              listContainer.appendChild(div);
          });
      }

      // Initialize List
      renderList(doctorsData);

      // Toggle Menu
      trigger.addEventListener('click', () => {
          menu.classList.toggle('hidden');
          chevron.classList.toggle('rotate-180');

          if(!menu.classList.contains('hidden')) {
              setTimeout(() => searchInput.focus(), 100);
              trigger.classList.add('ring-2', 'ring-emerald-500', 'border-emerald-500');
              trigger.classList.remove('border-slate-700');
          } else {
              closeMenu();
          }
      });

      // Search Logic
      searchInput.addEventListener('input', (e) => {
          const query = e.target.value.toLowerCase();
          const filtered = doctorsData.filter(d =>
              d.name.toLowerCase().includes(query) ||
              d.spec.toLowerCase().includes(query)
          );
          renderList(filtered);
      });

      // Close Helper
      function closeMenu() {
          menu.classList.add('hidden');
          chevron.classList.remove('rotate-180');
          trigger.classList.remove('ring-2', 'ring-emerald-500', 'border-emerald-500');
          trigger.classList.add('border-slate-700');
      }

      // Outside Click
      document.addEventListener('click', (e) => {
          if (!trigger.contains(e.target) && !menu.contains(e.target)) {
              closeMenu();
          }
      });
    </script>
  </body>
</html>
