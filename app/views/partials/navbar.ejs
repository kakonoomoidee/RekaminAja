<script>
  document.addEventListener("DOMContentLoaded", () => {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll(".sidebar-link");

    links.forEach((link) => {
      const href = link.getAttribute("href");
      const icon = link.querySelector("svg");

      // Logic: Jika URL browser diawali dengan href link (contoh: /admin/patients/add diawali /admin/patients)
      // Maka link tersebut dianggap ACTIVE.
      if (currentPath.startsWith(href) && href !== "#") {
        // Style Active
        link.classList.add(
          "bg-slate-800",
          "text-white",
          "shadow-sm",
          "ring-1",
          "ring-slate-700"
        );
        link.classList.remove(
          "text-slate-400",
          "hover:bg-slate-800",
          "hover:text-white"
        );

        // Icon Active (Blue)
        if (icon) {
          icon.classList.add("text-blue-500");
          icon.classList.remove("text-slate-500");
        }
      } else {
        // Style Inactive (Default)
        link.classList.add(
          "text-slate-400",
          "hover:bg-slate-800",
          "hover:text-white"
        );
        link.classList.remove(
          "bg-slate-800",
          "text-white",
          "shadow-sm",
          "ring-1",
          "ring-slate-700"
        );

        // Icon Inactive (Gray)
        if (icon) {
          icon.classList.add("text-slate-500");
          icon.classList.remove("text-blue-500");
        }
      }
    });
  });
</script>
