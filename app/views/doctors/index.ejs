<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Dokter â€“ RekaminAja</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "sans-serif"],
              mono: ["JetBrains Mono", "monospace"],
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans antialiased">
    <%- include("../partials/navbar") %>

    <main class="pl-64 min-h-screen">
      <div class="p-8 max-w-7xl mx-auto">
        <div
          class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8"
        >
          <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">
              Data Dokter
            </h1>
            <p class="text-slate-400 text-sm mt-1">
              Kelola data tenaga medis yang terdaftar di sistem.
            </p>
          </div>

          <a
            href="/admin/doctors/add"
            class="inline-flex items-center justify-center px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium rounded-lg transition-colors shadow-lg shadow-blue-500/20 gap-2"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"
              />
            </svg>
            Tambah Dokter
          </a>
        </div>

        <div
          class="bg-slate-900 border border-slate-800 rounded-xl shadow-xl overflow-hidden"
        >
          <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
              <thead>
                <tr
                  class="bg-slate-950/50 border-b border-slate-800 text-xs uppercase text-slate-400 font-semibold tracking-wider"
                >
                  <th class="px-6 py-4 w-16 text-center">No</th>
                  <th class="px-6 py-4">ID Dokter</th>
                  <th class="px-6 py-4">Nama Lengkap</th>
                  <th class="px-6 py-4">Spesialisasi</th>
                  <th class="px-6 py-4 text-right">Aksi</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-800/70">
                <% doctors.forEach((d, i) => { %>
                <tr class="hover:bg-slate-800/50 transition-colors group">
                  <td class="px-6 py-4 text-center text-slate-500 font-mono">
                    <%= i + 1 %>
                  </td>
                  <td class="px-6 py-4">
                    <span
                      class="font-mono text-sm text-blue-400 bg-blue-400/10 px-2 py-1 rounded border border-blue-400/20"
                    >
                      <%= d.doctorId %>
                    </span>
                  </td>
                  <td class="px-6 py-4 font-medium text-white">
                    <%= d.name %>
                  </td>
                  <td class="px-6 py-4">
                    <span
                      class="spec-badge inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium border transition-colors duration-300"
                      data-spec="<%= d.specialization %>"
                    >
                      <%= d.specialization %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <a
                        href="/admin/doctors/<%= d.doctorIdHash %>"
                        class="p-2 text-slate-400 hover:text-blue-400 hover:bg-blue-400/10 rounded-lg transition-colors"
                      >
                        <svg
                          class="w-5 h-5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                          />
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                          />
                        </svg>
                      </a>

                      <a
                        href="/admin/doctors/<%= d.doctorIdHash %>/edit"
                        class="p-2 text-slate-400 hover:text-yellow-400 hover:bg-yellow-400/10 rounded-lg transition-colors"
                      >
                        <svg
                          class="w-5 h-5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                          />
                        </svg>
                      </a>

                      <form
                        id="delete-form-<%= d.doctorIdHash %>"
                        method="POST"
                        action="/admin/doctors/<%= d.doctorIdHash %>/delete"
                        class="inline"
                      >
                        <button
                          type="button"
                          onclick="confirmDelete('<%= d.doctorIdHash %>', '<%= d.name %>')"
                          class="p-2 text-slate-400 hover:text-red-400 hover:bg-red-400/10 rounded-lg transition-colors"
                        >
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                            />
                          </svg>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const badges = document.querySelectorAll(".spec-badge");

        const colorMap = {
          anak: "bg-pink-500/10 text-pink-400 border-pink-500/20",
          bedah: "bg-red-500/10 text-red-400 border-red-500/20",
          gigi: "bg-orange-500/10 text-orange-400 border-orange-500/20",
          jantung: "bg-rose-500/10 text-rose-400 border-rose-500/20",
          saraf: "bg-purple-500/10 text-purple-400 border-purple-500/20",
          neurologi: "bg-purple-500/10 text-purple-400 border-purple-500/20",
          mata: "bg-teal-500/10 text-teal-400 border-teal-500/20",
          umum: "bg-slate-500/10 text-slate-400 border-slate-500/20",
          "penyakit dalam":
            "bg-indigo-500/10 text-indigo-400 border-indigo-500/20",
          kandungan: "bg-fuchsia-500/10 text-fuchsia-400 border-fuchsia-500/20",
          tht: "bg-lime-500/10 text-lime-400 border-lime-500/20",
          kulit: "bg-amber-500/10 text-amber-400 border-amber-500/20",
          jiwa: "bg-violet-500/10 text-violet-400 border-violet-500/20",
          psikiatri: "bg-violet-500/10 text-violet-400 border-violet-500/20",
          radiologi: "bg-cyan-500/10 text-cyan-400 border-cyan-500/20",
          orthopedi: "bg-sky-500/10 text-sky-400 border-sky-500/20",
        };

        badges.forEach((badge) => {
          const spec = (badge.getAttribute("data-spec") || "").toLowerCase();
          let appliedClass =
            "bg-emerald-500/10 text-emerald-400 border-emerald-500/20";

          for (const [key, value] of Object.entries(colorMap)) {
            if (spec.includes(key)) {
              appliedClass = value;
              break;
            }
          }

          appliedClass.split(" ").forEach((cls) => badge.classList.add(cls));
        });
      });

      // 2. Logic Delete Confirm
      function confirmDelete(hash, name) {
        Swal.fire({
          title: "Hapus Data Dokter?",
          text: `Yakin ingin menghapus "dr. ${name}"? Data yang sudah dihapus tidak dapat dikembalikan.`,
          icon: "warning",
          background: "#0f172a",
          color: "#e2e8f0",
          showCancelButton: true,
          confirmButtonColor: "#ef4444",
          cancelButtonColor: "#334155",
          confirmButtonText: "Ya, Hapus!",
          cancelButtonText: "Batal",
          reverseButtons: true,
          customClass: { popup: "border border-slate-700 rounded-xl" },
        }).then((result) => {
          if (result.isConfirmed) {
            document.getElementById(`delete-form-${hash}`).submit();
          }
        });
      }
    </script>
  </body>
</html>
