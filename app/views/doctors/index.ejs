<!DOCTYPE html>
<html>
  <head>
    <title>Doctors</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-900 text-white p-8">
    <%- include("../partials/navbar") %>
    <div class="max-w-5xl mx-auto">
      <div class="flex justify-between mb-6">
        <h1 class="text-2xl font-bold">üë®‚Äç‚öïÔ∏è Data Dokter</h1>
        <a href="/admin/doctors/add" class="bg-blue-600 px-4 py-2 rounded"
          >+ Tambah</a
        >
      </div>

      <table class="w-full bg-slate-800 rounded">
        <thead>
          <tr class="text-left border-b border-slate-700">
            <th class="p-3">ID</th>
            <th>Nama</th>
            <th>Spesialis</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% doctors.forEach(d => { %>
          <tr class="border-b border-slate-700">
            <td class="p-3"><%= d.doctorId %></td>
            <td><%= d.name %></td>
            <td><%= d.specialization %></td>
            <td class="space-x-2">
              <a
                href="/admin/doctors/<%= d.doctorIdHash %>"
                class="text-blue-400"
                >Detail</a
              >
              <a
                href="/admin/doctors/<%= d.doctorIdHash %>/edit"
                class="text-yellow-400"
                >Edit</a
              >
              <form
                action="/admin/doctors/<%= d.doctorIdHash %>/delete"
                method="POST"
                class="inline"
              >
                <button class="text-red-400">Hapus</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
