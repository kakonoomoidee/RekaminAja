<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Dokter – RekaminAja</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "sans-serif"],
              mono: ["JetBrains Mono", "monospace"],
            },
          },
        },
      };
    </script>
    <style>
      /* Custom Scrollbar (Sama kayak Add) */
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: #0f172a;
        border-radius: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #334155;
        border-radius: 4px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #475569;
      }
    </style>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans antialiased">
    <%- include("../partials/navbar") %>

    <main class="pl-64 min-h-screen flex flex-col items-center py-12">
      <div class="w-full max-w-2xl mx-auto px-4">
        <a
          href="/admin/doctors"
          class="text-sm text-slate-500 hover:text-blue-400 flex items-center gap-1 transition-colors mb-6"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            />
          </svg>
          Kembali
        </a>

        <div class="mb-8 text-center">
          <h1
            class="text-3xl font-bold text-white flex items-center justify-center gap-3"
          >
            <span class="text-yellow-500">✏️</span> Edit Data Dokter
          </h1>
          <p class="text-slate-400 mt-2">
            Perbarui informasi nama atau spesialisasi.
          </p>
        </div>

        <div
          class="bg-slate-900 border border-slate-800 rounded-xl p-8 shadow-2xl"
        >
          <form
            method="POST"
            action="/admin/doctors/<%= doctor.doctorIdHash %>/edit"
            class="space-y-6"
          >
            <div class="space-y-2">
              <label class="block text-sm font-medium text-slate-500"
                >ID Dokter (Locked)</label
              >
              <input
                value="<%= doctor.doctorId %>"
                disabled
                class="w-full px-4 py-3 bg-slate-950/50 border border-slate-800 rounded-lg text-slate-400 font-mono cursor-not-allowed"
              />
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-slate-300"
                >Nama Lengkap</label
              >
              <input
                name="name"
                value="<%= doctor.name %>"
                class="w-full px-4 py-3 bg-slate-950 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 text-white transition-all"
              />
            </div>

            <div class="space-y-2 relative">
              <label class="block text-sm font-medium text-slate-300"
                >Spesialisasi</label
              >

              <input
                type="hidden"
                name="specialization"
                id="specializationInput"
                value="<%= doctor.specialization %>"
                required
              />

              <button
                type="button"
                id="dropdownTrigger"
                class="w-full text-left pl-10 pr-10 py-3 bg-slate-950 border border-slate-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 text-white transition-all flex items-center justify-between relative"
              >
                <span id="selectedText"><%= doctor.specialization %></span>

                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <svg
                    class="h-5 w-5 text-slate-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                    />
                  </svg>
                </div>

                <div
                  class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-slate-500"
                >
                  <svg
                    id="chevronIcon"
                    class="w-5 h-5 transition-transform duration-200"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </div>
              </button>

              <div
                id="dropdownMenu"
                class="hidden absolute z-50 mt-2 w-full bg-slate-900 border border-slate-700 rounded-xl shadow-2xl max-h-52 overflow-y-auto custom-scrollbar"
              >
                <div class="p-1 space-y-1">
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Umum"
                  >
                    Dokter Umum
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Gigi"
                  >
                    Dokter Gigi
                  </div>
                  <div class="h-px bg-slate-700 my-1"></div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Penyakit Dalam"
                  >
                    Sp.PD - Penyakit Dalam
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Anak"
                  >
                    Sp.A - Anak
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Bedah"
                  >
                    Sp.B - Bedah
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Kandungan & Kebidanan"
                  >
                    Sp.OG - Kandungan & Kebidanan
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Saraf"
                  >
                    Sp.N - Saraf (Neurologi)
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Mata"
                  >
                    Sp.M - Mata
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="THT-KL"
                  >
                    Sp.T.H.T.K.L - Telinga Hidung Tenggorok
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Jantung & Pembuluh Darah"
                  >
                    Sp.JP - Jantung & Pembuluh Darah
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Paru"
                  >
                    Sp.P - Paru
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Kulit & Kelamin"
                  >
                    Sp.KK - Kulit & Kelamin
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Orthopedi"
                  >
                    Sp.OT - Orthopedi
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Psikiatri"
                  >
                    Sp.KJ - Kedokteran Jiwa (Psikiatri)
                  </div>
                  <div
                    class="dropdown-item px-4 py-2 hover:bg-slate-800 text-slate-300 hover:text-white rounded-lg cursor-pointer transition-colors text-sm"
                    data-value="Radiologi"
                  >
                    Sp.Rad - Radiologi
                  </div>
                </div>
              </div>
            </div>

            <button
              class="w-full bg-yellow-600 hover:bg-yellow-500 text-white font-bold py-3.5 rounded-lg shadow-lg shadow-yellow-600/20 transition-transform active:scale-[0.98]"
            >
              Update Informasi
            </button>
          </form>
        </div>
      </div>
    </main>

    <script>
      const trigger = document.getElementById("dropdownTrigger");
      const menu = document.getElementById("dropdownMenu");
      const hiddenInput = document.getElementById("specializationInput");
      const selectedText = document.getElementById("selectedText");
      const chevron = document.getElementById("chevronIcon");
      const items = document.querySelectorAll(".dropdown-item");

      // Toggle Menu
      trigger.addEventListener("click", () => {
        menu.classList.toggle("hidden");
        chevron.classList.toggle("rotate-180");

        // Highlight border pas aktif (Yellow focus)
        if (!menu.classList.contains("hidden")) {
          trigger.classList.add(
            "ring-2",
            "ring-yellow-500",
            "border-yellow-500"
          );
          trigger.classList.remove("border-slate-700");
        } else {
          trigger.classList.remove(
            "ring-2",
            "ring-yellow-500",
            "border-yellow-500"
          );
          trigger.classList.add("border-slate-700");
        }
      });

      // Pilih Option
      items.forEach((item) => {
        item.addEventListener("click", () => {
          const value = item.getAttribute("data-value");
          const text = item.textContent;

          selectedText.textContent = text;
          selectedText.classList.remove("text-slate-400");
          selectedText.classList.add("text-white");

          hiddenInput.value = value;

          menu.classList.add("hidden");
          chevron.classList.remove("rotate-180");
          trigger.classList.remove(
            "ring-2",
            "ring-yellow-500",
            "border-yellow-500"
          );
          trigger.classList.add("border-slate-700");
        });
      });

      // Close on outside click
      document.addEventListener("click", (e) => {
        if (!trigger.contains(e.target) && !menu.contains(e.target)) {
          menu.classList.add("hidden");
          chevron.classList.remove("rotate-180");
          trigger.classList.remove(
            "ring-2",
            "ring-yellow-500",
            "border-yellow-500"
          );
          trigger.classList.add("border-slate-700");
        }
      });
    </script>
  </body>
</html>
