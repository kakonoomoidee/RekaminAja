<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profil Dokter â€“ RekaminAja</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "sans-serif"],
              mono: ["JetBrains Mono", "monospace"],
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans antialiased">
    <%- include("../partials/navbar") %>

    <main class="pl-64 min-h-screen">
      <div class="p-8 max-w-4xl mx-auto">
        <a
          href="/admin/doctors"
          class="inline-flex items-center text-sm text-slate-400 hover:text-white mb-6 transition-colors group"
        >
          <svg
            class="w-4 h-4 mr-1 group-hover:-translate-x-1 transition-transform"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
          Kembali ke Daftar
        </a>

        <div
          class="bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden shadow-2xl"
        >
          <div
            id="profileBanner"
            class="h-32 bg-gradient-to-r from-emerald-900 to-slate-900 relative transition-colors duration-500"
          >
            <div class="absolute -bottom-12 left-8">
              <div
                class="w-24 h-24 rounded-full bg-slate-800 border-4 border-slate-900 flex items-center justify-center shadow-lg"
              >
                <svg
                  id="profileIcon"
                  class="w-12 h-12 text-emerald-500 transition-colors duration-500"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </div>
            </div>
          </div>

          <div class="pt-16 pb-8 px-8">
            <div class="flex justify-between items-start mb-6">
              <div>
                <h1 class="text-3xl font-bold text-white">
                  <%= doctor.name %>
                </h1>

                <% const isActive = true; %>

                <p
                  class="text-sm mt-1 flex items-center gap-2 <%= isActive ? 'text-emerald-400' : 'text-red-400' %>"
                >
                  <span
                    class="w-2 h-2 rounded-full animate-pulse <%= isActive ? 'bg-emerald-500' : 'bg-red-500' %>"
                  ></span>
                  <%= isActive ? 'Aktif Praktik' : 'Tidak Aktif' %>
                </p>
              </div>

              <a
                href="/admin/doctors/<%= doctor.doctorIdHash %>/edit"
                class="text-sm bg-slate-800 hover:bg-slate-700 border border-slate-700 text-slate-300 px-4 py-2 rounded-lg transition-colors"
              >
                Edit Data
              </a>
            </div>

            <div class="grid gap-6">
              <div
                class="bg-slate-950/50 p-5 rounded-xl border border-slate-800"
              >
                <label
                  class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-2 block"
                  >Doctor ID (SIP/NIP)</label
                >
                <div class="flex items-center gap-3">
                  <code class="font-mono text-lg text-white"
                    ><%= doctor.doctorId %></code
                  >
                </div>
              </div>

              <div
                class="bg-slate-950/50 p-5 rounded-xl border border-slate-800"
              >
                <label
                  class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-2 block"
                  >Spesialisasi</label
                >
                <div class="flex items-center gap-3">
                  <span
                    id="specData"
                    class="text-slate-200"
                    data-spec="<%= doctor.specialization %>"
                    ><%= doctor.specialization %></span
                  >
                </div>
              </div>

              <div
                class="bg-slate-950/50 p-5 rounded-xl border border-slate-800"
              >
                <label
                  class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-2 block"
                  >Blockchain Hash Identity</label
                >
                <div class="flex items-center gap-3">
                  <code
                    class="flex-1 font-mono text-xs text-slate-500 break-all"
                    ><%= doctor.doctorIdHash %></code
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const specElement = document.getElementById("specData");
        const banner = document.getElementById("profileBanner");
        const icon = document.getElementById("profileIcon");

        if (specElement) {
          const spec = (
            specElement.getAttribute("data-spec") || ""
          ).toLowerCase();

          // Config Warna Tema Spesialis
          let theme = { from: "from-emerald-900", text: "text-emerald-500" };

          if (spec.includes("anak"))
            theme = { from: "from-pink-900", text: "text-pink-500" };
          else if (spec.includes("bedah"))
            theme = { from: "from-red-900", text: "text-red-500" };
          else if (spec.includes("gigi"))
            theme = { from: "from-orange-900", text: "text-orange-500" };
          else if (spec.includes("jantung"))
            theme = { from: "from-rose-900", text: "text-rose-500" };
          else if (spec.includes("saraf") || spec.includes("neurologi"))
            theme = { from: "from-purple-900", text: "text-purple-500" };
          else if (spec.includes("mata"))
            theme = { from: "from-teal-900", text: "text-teal-500" };
          else if (spec.includes("umum"))
            theme = { from: "from-slate-700", text: "text-slate-400" };
          else if (spec.includes("penyakit dalam"))
            theme = { from: "from-indigo-900", text: "text-indigo-500" };
          else if (spec.includes("kandungan"))
            theme = { from: "from-fuchsia-900", text: "text-fuchsia-500" };
          else if (spec.includes("tht"))
            theme = { from: "from-lime-900", text: "text-lime-500" };
          else if (spec.includes("kulit"))
            theme = { from: "from-amber-900", text: "text-amber-500" };
          else if (spec.includes("jiwa") || spec.includes("psikiatri"))
            theme = { from: "from-violet-900", text: "text-violet-500" };
          else if (spec.includes("radiologi"))
            theme = { from: "from-cyan-900", text: "text-cyan-500" };
          else if (spec.includes("orthopedi"))
            theme = { from: "from-sky-900", text: "text-sky-500" };

          // Apply Styles (Banner & Icon Only)
          banner.classList.remove("from-emerald-900");
          banner.classList.add(theme.from);

          icon.classList.remove("text-emerald-500");
          icon.classList.add(theme.text);

        }
      });
    </script>
  </body>
</html>
