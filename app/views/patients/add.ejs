<!DOCTYPE html>
<html>
  <head>
    <title>Tambah Pasien</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-900 text-white">
    <%- include("../partials/navbar") %>

    <div class="p-6 max-w-xl">
      <h1 class="text-xl font-bold mb-4">Tambah Pasien</h1>

      <form method="POST" action="/admin/patients/add" class="space-y-4">
        <input
          required
          name="nik"
          placeholder="NIK"
          class="w-full p-2 text-black"
        />
        <input
          required
          name="name"
          placeholder="Nama Lengkap"
          class="w-full p-2 text-black"
        />
        <textarea
          required
          name="address"
          placeholder="Alamat"
          class="w-full p-2 text-black"
        ></textarea>

        <button class="bg-blue-600 px-4 py-2 rounded">Simpan</button>
      </form>
    </div>
  </body>
</html>
