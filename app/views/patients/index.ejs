<!DOCTYPE html>
<html>
  <head>
    <title>Data Pasien</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-900 text-white">
    <%- include("../partials/navbar") %>

    <div class="p-6">
      <div class="flex justify-between mb-4">
        <h1 class="text-xl font-bold">Data Pasien</h1>
        <a href="/admin/patients/add" class="bg-blue-600 px-4 py-2 rounded">
          + Tambah Pasien
        </a>
      </div>

      <table class="w-full text-sm border border-slate-700">
        <thead class="bg-slate-800">
          <tr>
            <th class="p-2 border">No</th>
            <th class="p-2 border">Nama</th>
            <th class="p-2 border">NIK Hash</th>
            <th class="p-2 border">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% patients.forEach((p, i) => { %>
          <tr class="border">
            <td class="p-2 text-center"><%= i + 1 %></td>
            <td class="p-2"><%= p.name %></td>
            <td class="p-2 text-xs"><%= p.nikHash %></td>
            <td class="p-2 space-x-2">
              <a href="/admin/patients/<%= p.nikHash %>" class="text-blue-400"
                >Detail</a
              >
              <a
                href="/admin/patients/<%= p.nikHash %>/edit"
                class="text-yellow-400"
                >Edit</a
              >

              <form
                method="POST"
                action="/admin/patients/<%= p.nikHash %>/delete"
                class="inline"
              >
                <button
                  class="text-red-400"
                  onclick="return confirm('Hapus pasien?')"
                >
                  Hapus
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
